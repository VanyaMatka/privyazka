<Window x:Class="zadaniye1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Приложение с вкладками" Height="400" Width="400">
    <TabControl>
        <TabItem Header="Задание 1">
            <StackPanel Margin="10">
                <Label Content="Имя типо:"/>
                <TextBox x:Name="nameTextBox" Width="200" ToolTip="Напишите ваше имя"/>
                <Button Content="Ввод" Click="SubmitButton_Click" Width="100" Margin="0,10,0,0"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="Задание 2">
            <StackPanel Margin="10">
                <TextBox x:Name="textBox" Height="150" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                <Button Content="Сохранить" Click="SaveButton_Click" Width="100" Margin="0,10,0,0"/>
                <Slider x:Name="fontSizeSlider" Minimum="8" Maximum="40" Value="12" TickFrequency="1" 
                        ValueChanged="FontSizeSlider_ValueChanged" Margin="0,10,0,0"/>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>